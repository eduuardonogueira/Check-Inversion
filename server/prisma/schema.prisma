// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

model Host {
  id String @id @default(uuid())
  ip String @unique 
  hostname String
  neighbors Neighbor[]
  HostQueries HostQuery[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Neighbor {
  id String @id @default(uuid())
  neighbor String
  port String
  remotePort String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  host Host? @relation(fields: [hostId], references: [id])
  hostId String
}

model HostQuery {
  id String @id @default(uuid())
  neighbor String
  port String
  remotePort String
  status String
  createdAt DateTime @default(now())
  host Host? @relation(fields: [hostId], references: [id])
  hostId String
}
